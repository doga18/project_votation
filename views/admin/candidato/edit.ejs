<%- include ('../../partials/header.ejs') %>
  <%- include ('../../partials/navbar.ejs') %>
<body>
  <div class="container my-2">
    <h1>Editar Candidato</h1>
    
    <div class="container my-3">
      <form action="/admin/candidato/edit" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label>Candidato</label>
          <input type="text" name="name" class="form-control" value="<%= candidato.nome %>">
        </div>
        <div class="form-group">
          <label id="chapa">Chapa</label>
          <input type="text" name="chapa" id="chapa" class="form-control" value="12">
          <input type="text" hidden name="id_candidato" value="<%= candidato.id %>">
        </div>
        <div class="form-select">
          <label>Cargo</label>
          <select name="cargo" id="cargo" class="form-select form-select-sm" aria-label=".form-select-sm example">
              <option selected>Selecione um Cargo</option>
            <% cargos.forEach(cargo => { %>
              <option value="<%= cargo.id %>"><%= cargo.nome %></option>  
            <% }); %>
            <% if (cargo_conselheiro) { %> 
              <% cargo_conselheiro.forEach(cargo_conselher => { %>
                <option value="<%= cargo_conselher.id %>"><%= cargo_conselher.nome %></option>
              <% }); %>
            <% } %>
          </select>
        </div>          
        <div class="form-group">
          <label>Foto</label>
          <input type="file" name="foto" class="form-control">
        </div>        
        <button type="submit" name="login" class="btn btn-primary">Cadastrar</button>
        <a href="/administrative/index" class="btn btn-danger">Cancelar</a>
      </form>

    </div>


  <%- include ('../../partials/footer.ejs') %>